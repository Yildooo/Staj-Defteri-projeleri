@model Book
@{
    ViewData["Title"] = Model.Title;
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Books</a></li>
        <li class="breadcrumb-item active">@Model.Title</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm">
            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
            {
                <img src="@Model.CoverImageUrl" class="card-img-top" alt="@Model.Title">
            }
            else
            {
                <div class="card-img-top book-cover-large d-flex align-items-center justify-content-center bg-light" style="height: 400px;">
                    <i class="bi bi-book display-1 text-muted"></i>
                </div>
            }
            <div class="card-body text-center">
                @if (Model.IsAvailable)
                {
                    <span class="badge bg-success fs-6 mb-3">
                        <i class="bi bi-check-circle me-1"></i>Available
                    </span>
                    <p class="text-muted">@Model.AvailableCopies of @Model.TotalCopies copies available</p>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="Borrow" asp-action="BorrowBook" method="post">
                            <input type="hidden" name="bookId" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-bookmark-plus me-2"></i>Borrow This Book
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login to Borrow
                        </a>
                    }
                }
                else
                {
                    <span class="badge bg-danger fs-6 mb-3">
                        <i class="bi bi-x-circle me-1"></i>Not Available
                    </span>
                    <p class="text-muted">All copies are currently borrowed</p>
                    <button class="btn btn-secondary btn-lg w-100" disabled>
                        <i class="bi bi-clock me-2"></i>Currently Unavailable
                    </button>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h1 class="fw-bold mb-2">@Model.Title</h1>
                <p class="lead text-muted mb-4">by @Model.Author</p>

                <div class="row mb-4">
                    <div class="col-sm-6 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-upc-scan text-primary me-2 fs-4"></i>
                            <div>
                                <small class="text-muted d-block">ISBN</small>
                                <strong>@Model.ISBN</strong>
                            </div>
                        </div>
                    </div>
                    @if (Model.PublishedYear.HasValue)
                    {
                        <div class="col-sm-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar3 text-primary me-2 fs-4"></i>
                                <div>
                                    <small class="text-muted d-block">Published</small>
                                    <strong>@Model.PublishedYear</strong>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Publisher))
                    {
                        <div class="col-sm-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-building text-primary me-2 fs-4"></i>
                                <div>
                                    <small class="text-muted d-block">Publisher</small>
                                    <strong>@Model.Publisher</strong>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Category))
                    {
                        <div class="col-sm-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-tag text-primary me-2 fs-4"></i>
                                <div>
                                    <small class="text-muted d-block">Category</small>
                                    <strong>@Model.Category</strong>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">Description</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }

                <div class="d-flex gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Books
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>Edit Book
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

