@model IEnumerable<Book>
@{
    ViewData["Title"] = "Browse Books";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold"><i class="bi bi-book me-2"></i>Browse Books</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg me-1"></i>Add New Book
        </a>
    }
</div>

<!-- Search and Filter Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="searchString" class="form-control" 
                           placeholder="Search by title, author, or ISBN..." 
                           value="@ViewData["CurrentFilter"]" />
                </div>
            </div>
            <div class="col-md-3">
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat" selected="@(ViewData["CurrentCategory"]?.ToString() == cat)">@cat</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select name="sortOrder" class="form-select">
                    <option value="">Sort by Title</option>
                    <option value="title_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "title_desc")">Title (Z-A)</option>
                    <option value="author" selected="@(ViewData["CurrentSort"]?.ToString() == "author")">Author (A-Z)</option>
                    <option value="author_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "author_desc")">Author (Z-A)</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Books Grid -->
@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-search display-4 text-muted"></i>
        <h4 class="mt-3">No books found</h4>
        <p class="text-muted">Try adjusting your search or filter criteria.</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 book-card border-0 shadow-sm">
                    <div class="book-cover-container position-relative">
                        @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                        {
                            <img src="@book.CoverImageUrl" class="card-img-top book-cover" alt="@book.Title">
                        }
                        else
                        {
                            <div class="card-img-top book-cover-placeholder d-flex align-items-center justify-content-center">
                                <i class="bi bi-book display-3 text-muted"></i>
                            </div>
                        }
                        <span class="badge @(book.IsAvailable ? "bg-success" : "bg-danger") position-absolute top-0 end-0 m-2">
                            @(book.IsAvailable ? "Available" : "Unavailable")
                        </span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-truncate" title="@book.Title">@book.Title</h5>
                        <p class="card-text text-muted mb-1">
                            <i class="bi bi-person me-1"></i>@book.Author
                        </p>
                        @if (!string.IsNullOrEmpty(book.Category))
                        {
                            <span class="badge bg-light text-dark">@book.Category</span>
                        }
                        <p class="card-text small text-muted mt-2">
                            <i class="bi bi-layers me-1"></i>@book.AvailableCopies of @book.TotalCopies copies available
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary flex-grow-1">
                            <i class="bi bi-info-circle me-1"></i>Details
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-pencil"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

