@{
    ViewData["Title"] = "Contact Us";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-envelope display-1 text-primary"></i>
                    <h1 class="fw-bold mt-3">Contact Us</h1>
                    <p class="text-muted">We'd love to hear from you!</p>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <div class="card h-100 border-0 bg-light">
                            <div class="card-body text-center p-4">
                                <i class="bi bi-geo-alt display-4 text-primary mb-3"></i>
                                <h6 class="fw-bold">Address</h6>
                                <p class="text-muted mb-0">
                                    123 Library Street<br>
                                    Booktown, BK 12345
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 bg-light">
                            <div class="card-body text-center p-4">
                                <i class="bi bi-telephone display-4 text-primary mb-3"></i>
                                <h6 class="fw-bold">Phone</h6>
                                <p class="text-muted mb-0">
                                    (555) 123-4567<br>
                                    Mon-Fri: 9am-6pm
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 bg-light">
                            <div class="card-body text-center p-4">
                                <i class="bi bi-envelope display-4 text-primary mb-3"></i>
                                <h6 class="fw-bold">Email</h6>
                                <p class="text-muted mb-0">
                                    info@library.com<br>
                                    support@library.com
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <h4 class="fw-bold mb-4">Send us a Message</h4>
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Your Name</label>
                            <input type="text" class="form-control" placeholder="Enter your name" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email Address</label>
                            <input type="email" class="form-control" placeholder="Enter your email" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Subject</label>
                        <input type="text" class="form-control" placeholder="What is this about?">
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" rows="5" placeholder="Your message..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send me-2"></i>Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

