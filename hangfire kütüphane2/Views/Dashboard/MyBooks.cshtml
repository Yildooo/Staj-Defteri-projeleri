@model IEnumerable<BorrowRecord>
@{
    ViewData["Title"] = "My Books";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold mb-1"><i class="bi bi-bookmark-fill text-primary me-2"></i>My Books</h1>
        <p class="text-muted mb-0">Books you currently have borrowed.</p>
    </div>
    <a asp-controller="Books" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Borrow More
    </a>
</div>

@if (!Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h3 class="mt-3">No Books Borrowed</h3>
            <p class="text-muted">You haven't borrowed any books yet.</p>
            <a asp-controller="Books" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-book me-2"></i>Browse Our Collection
            </a>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var borrow in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm @(borrow.IsOverdue ? "border-danger border-2" : "")">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            @if (!string.IsNullOrEmpty(borrow.Book?.CoverImageUrl))
                            {
                                <img src="@borrow.Book.CoverImageUrl" alt="@borrow.Book.Title" 
                                     class="rounded me-3" style="width: 60px; height: 90px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center me-3" 
                                     style="width: 60px; height: 90px;">
                                    <i class="bi bi-book text-muted"></i>
                                </div>
                            }
                            <div class="flex-grow-1">
                                <h5 class="card-title fw-bold mb-1">@borrow.Book?.Title</h5>
                                <p class="text-muted small mb-2">@borrow.Book?.Author</p>
                                @if (borrow.IsOverdue)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-exclamation-triangle me-1"></i>Overdue by @borrow.DaysOverdue days
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Active
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="row text-center border-top pt-3">
                            <div class="col-6">
                                <small class="text-muted d-block">Borrowed</small>
                                <strong>@borrow.BorrowDate.ToString("MMM dd")</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Due Date</small>
                                <strong class="@(borrow.IsOverdue ? "text-danger" : "")">
                                    @borrow.DueDate.ToString("MMM dd")
                                </strong>
                            </div>
                        </div>

                        @if (borrow.FineAmount > 0)
                        {
                            <div class="alert alert-warning mt-3 mb-0 py-2">
                                <small><i class="bi bi-exclamation-circle me-1"></i>Fine: $@borrow.FineAmount?.ToString("F2")</small>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <form asp-controller="Borrow" asp-action="ReturnBook" method="post">
                            <input type="hidden" name="borrowId" value="@borrow.Id" />
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-box-arrow-left me-2"></i>Return Book
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

