@model IEnumerable<BorrowRecord>
@{
    ViewData["Title"] = "Borrowing History";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold mb-1"><i class="bi bi-clock-history text-info me-2"></i>Borrowing History</h1>
        <p class="text-muted mb-0">Your complete borrowing record.</p>
    </div>
    <a asp-action="MyBooks" class="btn btn-outline-primary">
        <i class="bi bi-bookmark me-2"></i>Current Books
    </a>
</div>

@if (!Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-clock display-1 text-muted"></i>
            <h3 class="mt-3">No History Yet</h3>
            <p class="text-muted">You haven't borrowed any books yet.</p>
            <a asp-controller="Books" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-book me-2"></i>Start Borrowing
            </a>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Book</th>
                        <th>Borrowed</th>
                        <th>Due Date</th>
                        <th>Returned</th>
                        <th>Status</th>
                        <th>Fine</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(record.Book?.CoverImageUrl))
                                    {
                                        <img src="@record.Book.CoverImageUrl" alt="" class="rounded me-2" style="width: 40px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 50px;">
                                            <i class="bi bi-book text-muted small"></i>
                                        </div>
                                    }
                                    <div>
                                        <strong class="d-block">@record.Book?.Title</strong>
                                        <small class="text-muted">@record.Book?.Author</small>
                                    </div>
                                </div>
                            </td>
                            <td>@record.BorrowDate.ToString("MMM dd, yyyy")</td>
                            <td>@record.DueDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (record.ReturnDate.HasValue)
                                {
                                    @record.ReturnDate?.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                @switch (record.Status)
                                {
                                    case BorrowStatus.Active:
                                        <span class="badge bg-success">Active</span>
                                        break;
                                    case BorrowStatus.Returned:
                                        <span class="badge bg-secondary">Returned</span>
                                        break;
                                    case BorrowStatus.Overdue:
                                        <span class="badge bg-danger">Overdue</span>
                                        break;
                                    case BorrowStatus.Lost:
                                        <span class="badge bg-dark">Lost</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (record.FineAmount > 0)
                                {
                                    <span class="text-danger fw-bold">$@record.FineAmount?.ToString("F2")</span>
                                    @if (record.FinePaid)
                                    {
                                        <span class="badge bg-success ms-1">Paid</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="row g-4 mt-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <h4 class="fw-bold text-primary">@Model.Count()</h4>
                    <p class="text-muted mb-0">Total Records</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <h4 class="fw-bold text-success">@Model.Count(r => r.Status == BorrowStatus.Returned)</h4>
                    <p class="text-muted mb-0">Books Returned</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <h4 class="fw-bold text-warning">$@Model.Where(r => r.FineAmount > 0).Sum(r => r.FineAmount ?? 0).ToString("F2")</h4>
                    <p class="text-muted mb-0">Total Fines</p>
                </div>
            </div>
        </div>
    </div>
}

